#!/bin/bash

# terminal
term=(
python
vim
htop
ranger
imagemagick
ffmpeg
yt-dlp
)

# essential
ess=(
kitty
stats
dropbox
nextcloud
telegram
obsidian
vlc
homebrew/cask/mpv
spotify
transmission
#utils
the-unarchiver
appcleaner
rectangle
raycast
amorphousdiskmark
dozer
balenaetcher
mullvadvpn
)

# extra
extra=(
tor-browser
libreoffice
virtualbox
)

echo "what to install"
select choice in all all-no-extra term extra quit
do 
    echo "selected is $choice"
    case $choice in 
        all)
            brew install ${term[@]} ${ess[@]} ${extra[@]}
            break
            ;;
        all-no-extra)
            brew install ${term[@]} ${ess[@]}
            break
            ;;
        term)
            brew install ${term[@]}
            break
            ;;
        extra)
            brew install ${extra[@]}
            break
            ;;
        quit)
            break
            ;;
        *)
            echo "invalid"
            ;;
    esac
done


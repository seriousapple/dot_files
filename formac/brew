#!/bin/bash

# terminal
term=(
python
vim
tmux
htop
ranger
imagemagick
ffmpeg
yt-dlp
newsboat
hledger
fzf
gnu-sed
gnupg
wireguard-tools
rclone
rsync
)

# essential
ess=(
iterm2
stats
telegram
vlc
homebrew/cask/mpv
spotify
transmission
#utils
the-unarchiver
appcleaner
rectangle
amorphousdiskmark
balenaetcher
)

# extra
extra=(
tor-browser
libreoffice
virtualbox
)

echo "what to install"
select choice in all all-no-extra term extra quit
do 
    echo "selected is $choice"
    case $choice in 
        all)
            brew install ${term[@]} ${ess[@]} ${extra[@]}
            break
            ;;
        all-no-extra)
            brew install ${term[@]} ${ess[@]}
            break
            ;;
        term)
            brew install ${term[@]}
            break
            ;;
        extra)
            brew install ${extra[@]}
            break
            ;;
        quit)
            break
            ;;
        *)
            echo "invalid"
            ;;
    esac
done


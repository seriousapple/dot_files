#!/usr/bin/env bash

#remove existing files
rm -rf ~/.config ~/.vimrc ~/.vim ~/.bashrc ~/.bash_profile

#vim
ln -s ~/Dropbox/shared/dot\ files/dot_files/.vimrc ~/.vimrc
ln -s ~/Dropbox/shared/dot\ files/dot_files/.vim ~/.vim

#bash
ln -s ~/Dropbox/shared/dot\ files/dot_files/.bashrc ~/.bashrc
ln -s ~/Dropbox/shared/dot\ files/dot_files/.bash_profile ~/.bash_profile

#zsh

#.config
ln -s ~/Dropbox/shared/dot\ files/dot_files/.config ~/.config
